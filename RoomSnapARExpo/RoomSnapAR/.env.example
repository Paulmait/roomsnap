# ============================================
# RoomSnap AR - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Variables prefixed with EXPO_PUBLIC_ are exposed to the client
# DO NOT commit .env to version control!
# ============================================

# ----------------------
# SENTRY CRASH REPORTING (Critical - Required for production)
# ----------------------
# Get your DSN from: https://sentry.io/settings/{org}/projects/{project}/keys/
EXPO_PUBLIC_SENTRY_DSN=https://YOUR_KEY@YOUR_ORG.ingest.sentry.io/PROJECT_ID
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=roomsnap-ar

# ----------------------
# STRIPE PAYMENTS (Critical - Required for subscriptions)
# ----------------------
# Get keys from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_MERCHANT_ID=merchant.com.roomsnap.app

# ----------------------
# API CONFIGURATION
# ----------------------
EXPO_PUBLIC_API_BASE_URL=https://api.roomsnap.app/v1
EXPO_PUBLIC_API_KEY=your_api_key_here

# ----------------------
# PUSH NOTIFICATIONS
# ----------------------
# Firebase (Android): Download google-services.json from Firebase Console
FCM_SERVER_KEY=your_fcm_server_key_here

# Apple (iOS)
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# ----------------------
# ANALYTICS
# ----------------------
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key_here

# ----------------------
# AI SERVICES (Required for AI Vision features)
# ----------------------
# Claude API: https://console.anthropic.com/
EXPO_PUBLIC_ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# OpenAI (alternative): https://platform.openai.com/
EXPO_PUBLIC_OPENAI_API_KEY=sk-your_openai_api_key_here

# ----------------------
# SECURITY (Server-side)
# ----------------------
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_char_encryption_key_here

# ----------------------
# DATABASE (Server-side)
# ----------------------
DATABASE_URL=postgresql://user:password@localhost:5432/roomsnap
REDIS_URL=redis://localhost:6379

# ----------------------
# EMAIL SERVICES
# ----------------------
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@roomsnap.app

# ----------------------
# CLOUD STORAGE
# ----------------------
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=roomsnap-uploads
AWS_REGION=us-east-1

# ----------------------
# ENVIRONMENT
# ----------------------
NODE_ENV=development
APP_ENV=development